@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Google</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pagina Inicial</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        
                        @if(Context.Session.GetInt32("IdUsuario") == null) 
                        {
                            <li class="nav-item">
                                        <a class="navbar-brand" asp-area="" asp-controller="Usuario"
                                            asp-action="Login">Login</a>
                                    </li>
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Usuario"
                                asp-action="Cadastro">Cadastrar</a>
                        </li>
                                 //aqui verifica se na sessão de
                            /*USUARIOCONTROLE A SESSAO RECEBE ALGUM ID CASO RECEBER ALGUM VALOR SIGNIFICA QUE O USUARIO LOGOU
                            //CASO FOR NULL NÃO LOGOU*/
                                    //A CONDICAO SERA SE IdUsuario receber algum valor irá mostra tais opcao como listagem e sair e
                                    //etc caso for null tera opcao para se cadastrar
                                    //se a condicao for igual a null sera exibido LOGIN
                        }
                        else {//aqui e o verifcador de condicao caso for ao contrario de null aparecera tais
                                    //informacoes como cadastra pacotes e sair
                                       <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Pacotes"
                                asp-action="Cadastro">Cadastrar Pacote</a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Usuario"
                                asp-action="Listagem">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Pacotes"
                                asp-action="ListaPacotes">Pacotes</a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Usuario"
                                asp-action="Logout">Sair</a>
                        </li>

                        }
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home"
                                asp-action="FaleConosco">Fale Conosco</a>
                        </li>
                     
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Passagens - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
