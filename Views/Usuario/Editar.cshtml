@model Usuario
@{
    ViewData["Title"] = "Editar";
}
 <style>
        body {
background-image : url("https://aeromagazine.uol.com.br/media/versions/boeing-737-800-gol-pr-guc_free_big.jpg");
background-repeat: no-repeat;
background-position: center;
background-size: cover;}

    </style>
<form method="POST" asp-action="Editar">
    
    <input type="hidden" asp-for="Id">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" required>
    </p>
    <p>
        <label asp-for="Login">Seu login:</label>
        <input asp-for="Login" required>
    </p>
    <p>
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha" required>
    </p>
    <p>
        <label asp-for="DataNascimento">Data de nascimento:</label>
        <input asp-for="DataNascimento" type="Date" required>

    </p>


    <p>
        <input type="submit" value="Editar">
    </p>

</form>