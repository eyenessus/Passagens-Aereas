@model Usuario
@{
    ViewData["Title"] = "Cadastro";
}
 <style>
        body {
background-image : url("https://cdls.org.br/wp-content/uploads/cdlce_base/2020/07/iStock-1223604108.jpg");
background-repeat: no-repeat;
background-position: center;
background-size: cover;}

    </style>
<form method="POST" asp-action="Cadastro">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" required>
    </p>
    <p>
        <label asp-for="Login">Seu login:</label>
        <input asp-for="Login" required>
    </p>
    <p>
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha" type="password" required>
    </p>
    <p>
        <label asp-for="DataNascimento">Data de nascimento:</label>
        <input asp-for="DataNascimento" type="Date" required>

    </p>


    <p>
        <input type="submit" value="Cadastrar">
    </p>

</form>